{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "strict": true,
    "sourceMap": false,
    "baseUrl": "./",
    "strictPropertyInitialization": false,
    "removeComments": false,
    "outDir": "./lib",
    "rootDirs": ["./src"],
    "declaration": true
  },
  "files": ["./src/index.ts"],
  "exclude": ["node_modules"]
}
